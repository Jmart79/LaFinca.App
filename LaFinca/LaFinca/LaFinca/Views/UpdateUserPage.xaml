<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaFinca.Views.UpdateUserPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!" />

            <Entry Placeholder="Username" x:Name="UsernameToUpdateEntry" Completed="UsernameInputed"/>
            <Entry Text="{Binding name}" Placeholder="Name"/>
            <Entry Text="{Binding email}" Placeholder="Email"/>
            <Entry Text="{Binding password}" IsPassword="True" Placeholder="Password"/>
            <Entry Text="{Binding password}" IsPassword="True" Placeholder="Password"/>
            <Label>Role</Label>
            <Picker SelectedItem="{Binding Role}" x:Name="UpdateRolePicker" SelectedIndexChanged="Picker_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>Customer</x:String>
                    <x:String>Management</x:String>
                </Picker.Items>
            </Picker>
            <Button Text="Update" Clicked="UpdateClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>