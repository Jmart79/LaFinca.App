<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaFinca.Views.RegisterPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Padding="20,50,20,20">
            <Entry Text="{Binding name}" Placeholder="Name" Margin="0, 10, 0,0" HorizontalOptions="Center" WidthRequest="250"/>
            <Entry Text="{Binding username}" Placeholder="Username" Margin="0, 10, 0,0" HorizontalOptions="Center" WidthRequest="250"/>
            <Entry Text="{Binding email}" Placeholder="Email" Margin="0, 10, 0,0" HorizontalOptions="Center" WidthRequest="250"/>
            <Entry Text="{Binding password}" IsPassword="True" Placeholder="Password" Margin="0, 10, 0,0" HorizontalOptions="Center" WidthRequest="250"/>
            <Entry Text="{Binding password}" IsPassword="True" Placeholder="Password" Margin="0, 10, 0,40" HorizontalOptions="Center" WidthRequest="250"/>
            <Button Text="Register" Clicked="RegisterClicked"  WidthRequest="225" HorizontalOptions="Center"/>
            <Button Text="Cancle" Clicked="Button_Clicked"  WidthRequest="225" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>