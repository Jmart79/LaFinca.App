<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaFinca.Views.CategoryDisplayView">
  <ContentView.Content>
      <StackLayout>
            <StackLayout.GestureRecognizers>
                <!--
                up = order
                <SwipeGestureRecognizer Direction="Up" Swiped="OnSwiped"/>
                down = save
                <SwipeGestureRecognizer Direction="Down" Swiped="Onswipe"/>
                -->
                
            </StackLayout.GestureRecognizers>

            <Label BackgroundColor="#1AC0C6" Text="{Binding ItemName}" FontSize="Title" TextColor="#134E6F" ></Label>
            <StackLayout BackgroundColor="#1AC0C6">

                <Label Text="{Binding Description}" FontSize="Large" TextColor="#134E6F"></Label>
                <Label Text="{Binding Cost}" FontSize="Large" TextColor="#134E6F"></Label>
            </StackLayout>

            <Button Clicked="Button_Clicked" Text="Order" Margin="0, 10, 0,0" HorizontalOptions="Center" WidthRequest="250"/>
            <Button Clicked="Button_Clicked_1" Text="Favorite" Margin="0, 10, 0,0" HorizontalOptions="Center" WidthRequest="250" />
        </StackLayout>
  </ContentView.Content>
</ContentView>