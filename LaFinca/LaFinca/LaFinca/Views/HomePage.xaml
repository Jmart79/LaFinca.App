<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaFinca.Views.HomePage" 
             NavigationPage.HasNavigationBar="False" BackgroundColor="#DEE0E6">

    <!--E9CDAA  E6C092-->
    
    <ContentPage.Resources>
        <ResourceDictionary x:Key="StyleSheetDictionary">
            <StyleSheet x:Key="StyleSheet" Source="CSS/Stylesheet1.css"/>
            
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center" >

            <Label Text="La Finca" x:Name="TitleLabel" FontSize="50" HorizontalOptions="Center" TextColor="Black" FontFamily="Cinzel-SemiBold" Margin="0,0,0,50" FontAttributes="Bold"/>
            <!--
            <Label Text="Bruncheria" FontSize="30" HorizontalOptions="Center" TextColor="#FF6150" FontAttributes="Bold" Margin="0,0,0,50"/>
            
            -->
            <Button Text="Register" Clicked="OnRegisterClicked" WidthRequest="225" HorizontalOptions="Center" />
            <Button Text="Login" Clicked="OnLoginClicked" WidthRequest="225" HorizontalOptions="Center" />
            <Button Text="Continue" Clicked="OnContinueClicked"  WidthRequest="225" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>